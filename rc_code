#include "RC.hpp"
#include <Servo.h>
#include <Wire.h>
#include <Servo.h>
#include <MPU6050_tockn.h>
MPU6050 imu(Wire);
Servo motor1;
Servo motor2;
Servo myservo1;//right 125 degree
Servo myservo2;
RC ch3(2); // Setup pin 2 for input
int pos1 = 132;// right motor
int pos2 = 90;// right motor

float Kp[]={0.08,0,0,0};
float Ki[]={0,0,0,0};
float Kd[]={0.007,0,0,0};
float maxspeed[]={1700,40,1600};
float minspeed[]={1100,-40,1100};
float error[]={0,0,0};
float error_sum[]={0,0,0};
float error_diff[]={0,0,0};
float sampletime=1;
float prevtime=0;
float prestime=0;
float desiredangle[]={};
float preverror[]={0,0,0,0};
long timer1 = 0;
float throttle1=0.00;
float throttle2=0.00;
float b[3]={0,0,0};
float Angle[3]={0,0,0};
float out[3]={0,0,0};
int fla=0,i,fla1=0;
float des_ang[3]={0,0,0};
void setup() {
    Serial.begin(9600); // Serial for debug
    ch3.begin(true); // ch3 on pin 18 reading RC HIGH duration
    motor1.attach(3);
    motor2.attach(5);
    motor1.writeMicroseconds(1000);
    motor2.writeMicroseconds(1000);
    myservo1.attach(9);
    myservo2.attach(6);
    pinMode(7,OUTPUT);
    pinMode(8,OUTPUT);
    digitalWrite(7,HIGH);
   digitalWrite(8,HIGH);
   myservo1.write(pos1);              // tell servo to go to position in variable 'pos'
    delayMicroseconds(15); 
    myservo2.write(pos2);
    delayMicroseconds(15);
    Wire.begin();
  imu.begin();
  imu.calcGyroOffsets(true);
  delay(1000);
}

void loop() {
     
   int speed1=1290;//speeeeeeeeeeeeeeeeed
   imu.update();
  
   if(fla==0){
   
     for(int i=0;i<180;i++){
      b[1]+=imu.getAngleX();
      b[0]+=imu.getAngleY();
      b[2]+=imu.getAngleZ();
      }
    b[0]=b[0]/180;
    b[1]=b[1]/180;
    b[2]=b[2]/180;
    fla=1;
   
  }
  do{
    // Serial.println(millis()- prestime);
  }while((millis()- prestime)<sampletime);
  for (int j=0;j<=20;j++){
      Angle[1]+=imu.getAngleX();
      Angle[0]+=imu.getAngleY();
      Angle[2]+=imu.getAngleZ();
  }
  for(int i=0;i<=3;i++){
    Angle[i]=Angle[i]/20;
  }
      float  diff_time=(millis()-prestime)/1000;
      prestime=millis();
     
      for(int i=0;i<3;i++){
       Angle[i]=(Angle[i])-b[i];
       }
       if(fla1==0){
       des_ang[0]=Angle[0];
       des_ang[1]=Angle[1];
       fla1=1;
       }

       //Serial.println(Angle[0]);
      for(i=0;i<3;i++){
      error[i]= Angle[i]- des_ang[i];
      error_diff[i]= ((error[i]-preverror[i])/diff_time);
      error_sum[i]+= error[i]*diff_time;
      preverror[i]=error[i];
      out[i]= (Kp[i]*error[i])+(Ki[i]*error_sum[i])+(Kd[i]*error_diff[i]);
      }
      Serial.println(error[0]);
     
      Serial.print("difftime");
      Serial.println(diff_time);
      Serial.print("error_sum");
      Serial.println(error_sum[0]);
      Serial.print("error_diff");
      Serial.println(error_diff[0]);
      Serial.print("error= ");
      Serial.println(error[0]);
      throttle1=speed1+35-out[0];
      throttle2=speed1+out[0];
      pos1=pos1+out[1];
      pos2=pos2+out[1];
      if(pos1>maxspeed[1])
      {
      pos1=maxspeed[1];
      }
      if(pos1<minspeed[1])
      {
      pos1=minspeed[1];
      }
      if(pos2>maxspeed[1])
      {
      pos2=maxspeed[1];
      }
      if(pos2<minspeed[1])
      {
      pos2=minspeed[1];
      }

      
      
      if(throttle1>maxspeed[0]){
        throttle1=maxspeed[0];
      }
      if(throttle1<minspeed[0]){
        throttle1=minspeed[0];
      }
      if(throttle2>maxspeed[0]){
        throttle2=maxspeed[0];  
      }
      if(throttle2<minspeed[0]){
        throttle2=minspeed[0];
      }
      motor1.writeMicroseconds(throttle1);
     motor2.writeMicroseconds(throttle2); 
      myservo1.write(pos1); 
      delayMicroseconds(15);
      myservo2.write(pos2);
      delayMicroseconds(15);
      
     //delay(2000);
    /*  motor1.writeMicroseconds(1440);
     motor2.writeMicroseconds(1600);
       delay(2000);*/
    //Serial.print("Anglex= ");
    //Serial.print(Angle[1]);
    //Serial.print("  Angley=");
    //Serial.print(Angle[0]);
    //Serial.print("  Anglez= ");
    //Serial.println(Angle[2]);

    //Serial.print(speed1);

  /*  Serial.println(throttle1);
    Serial.println(throttle2);*/
    //delay(800);
    //Serial.println(imu.getAngleX());

 
}
